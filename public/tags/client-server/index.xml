  &lt;thead&gt;
      &lt;tr&gt;
          &lt;th&gt;Bước&lt;/th&gt;
          &lt;th&gt;Thực hiện&lt;/th&gt;
          &lt;th&gt;Mô tả&lt;/th&gt;
      &lt;/tr&gt;
  &lt;/thead&gt;
  &lt;tbody&gt;
      &lt;tr&gt;
          &lt;td&gt;1&lt;/td&gt;
          &lt;td&gt;&lt;code&gt;new ServerSocket(8080)&lt;/code&gt;&lt;/td&gt;
          &lt;td&gt;Mở cổng và chờ kết nối&lt;/td&gt;
      &lt;/tr&gt;
      &lt;tr&gt;
          &lt;td&gt;2&lt;/td&gt;
          &lt;td&gt;&lt;code&gt;serverSocket.accept()&lt;/code&gt;&lt;/td&gt;
          &lt;td&gt;Chờ client&lt;/td&gt;
      &lt;/tr&gt;
      &lt;tr&gt;
